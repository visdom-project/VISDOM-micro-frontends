{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["warn", "double", { "avoidEscape": true }],
    "no-dupe-else-if": ["error"],
    "eqeqeq": ["error", "always"],
    "no-implicit-globals": "error",
    "no-redeclare": "error",
    "no-undef": "error",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-promise-executor-return": "off",
    "camelcase": "warn",
    "arrow-spacing": "warn",
    "no-var": "error",
    "no-console": "warn",
    "prefer-const": "off",
    "no-unreachable": "error",
    "complexity": ["warn", 80],
    "no-invalid-this": "warn",
    "no-multi-spaces": "warn",
    "no-self-assign": "warn",
    "require-await": "off",
    "no-shadow": "warn",
    "comma-spacing": "warn",
    "max-lines-per-function": ["warn", 300],
    "prefer-object-spread": "warn",
    "prefer-template": "off",
    "no-trailing-spaces": "warn",
    "object-curly-spacing": ["warn", "always"],
    "react/prop-types": "warn"
  }
}
